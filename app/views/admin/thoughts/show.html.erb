<div class="max-w-2xl mx-auto">
  <div class="mb-6 flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">Thought Details</h1>
    <div class="space-x-2">
      <%= link_to "Edit", edit_admin_thought_path(@thought), class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
      <%= link_to "Back", admin_thoughts_path, class: "px-4 py-2 text-sm font-medium text-gray-500 hover:text-gray-700" %>
    </div>
  </div>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="p-6">
      <p class="text-xl text-gray-900 leading-relaxed"><%= @thought.content %></p>
    </div>

    <div class="border-t border-gray-200 px-6 py-4 bg-gray-50">
      <dl class="grid grid-cols-2 gap-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">Tags</dt>
          <dd class="mt-1">
            <% if @thought.tags.any? %>
              <% @thought.tags.each do |tag| %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 mr-1">
                  <%= tag %>
                </span>
              <% end %>
            <% else %>
              <span class="text-sm text-gray-400">No tags</span>
            <% end %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">View Count</dt>
          <dd class="mt-1">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
              <%= @thought.view_count %> views
            </span>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @thought.created_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @thought.updated_at.strftime("%B %d, %Y at %I:%M %p") %></dd>
        </div>
      </dl>
    </div>

    <div class="border-t border-gray-200 px-6 py-4">
      <p class="text-sm text-gray-500">
        Public URL: <%= link_to thought_url(@thought), thought_path(@thought), class: "text-blue-600 hover:text-blue-500" %>
      </p>
    </div>
  </div>
</div>

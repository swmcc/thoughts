<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Thoughts</h1>
  <%= link_to "New Thought", new_admin_thought_path, class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
</div>

<div class="bg-white shadow rounded-lg overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Content</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tags</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Views</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @thoughts.each do |thought| %>
        <tr>
          <td class="px-6 py-4">
            <div class="text-sm text-gray-900 max-w-xs truncate"><%= thought.content %></div>
          </td>
          <td class="px-6 py-4">
            <% thought.tags.each do |tag| %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 mr-1">
                <%= tag %>
              </span>
            <% end %>
          </td>
          <td class="px-6 py-4">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
              <%= thought.view_count %>
            </span>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500">
            <%= thought.created_at.strftime("%b %d, %Y") %>
          </td>
          <td class="px-6 py-4 text-right text-sm font-medium">
            <div class="flex items-center justify-end gap-2">
              <%= link_to edit_admin_thought_path(thought), class: "p-2 text-blue-600 hover:text-blue-900 hover:bg-blue-50 rounded-lg transition-colors", title: "Edit" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              <% end %>
              <%= button_to admin_thought_path(thought), method: :delete, class: "p-2 text-red-600 hover:text-red-900 hover:bg-red-50 rounded-lg transition-colors", title: "Delete", data: { turbo_confirm: "Are you sure?" } do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if @thoughts.respond_to?(:total_pages) && @thoughts.total_pages > 1 %>
  <div class="mt-4">
    <%= paginate @thoughts %>
  </div>
<% end %>

<% if current_admin&.api_token %>
  <div class="mt-8 bg-gray-50 rounded-lg p-6">
    <h2 class="text-lg font-medium text-gray-900 mb-2">API Token</h2>
    <p class="text-sm text-gray-600 mb-4">Use this token to authenticate API requests from your iOS app.</p>
    <div class="flex items-center space-x-4">
      <code class="flex-1 bg-white px-4 py-2 rounded border text-sm font-mono text-gray-800 select-all">
        <%= current_admin.api_token %>
      </code>
      <%= button_to "Regenerate", admin_regenerate_token_path, method: :post, class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md text-sm font-medium", data: { turbo_confirm: "This will invalidate your current token. Continue?" } %>
    </div>
  </div>
<% end %>

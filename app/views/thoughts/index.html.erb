<div class="lg:grid lg:grid-cols-4 lg:gap-8">
  <!-- Main Timeline -->
  <div class="lg:col-span-3" data-controller="infinite-scroll">
    <% if @current_tag %>
      <div class="mb-6 flex items-center justify-between">
        <h1 class="text-xl font-semibold text-gray-900 dark:text-white">
          Thoughts tagged #<%= @current_tag %>
        </h1>
        <%= link_to "Clear filter", root_path, class: "text-sm text-blue-600 dark:text-blue-400 hover:underline" %>
      </div>
    <% end %>

    <% if @thoughts.any? %>
      <div id="thoughts-list" class="divide-y divide-gray-200 dark:divide-gray-800" data-infinite-scroll-target="entries">
        <%= render partial: "shared/thought_card", collection: @thoughts, as: :thought %>
      </div>

      <div id="pagination" data-infinite-scroll-target="pagination" class="mt-8 flex justify-center">
        <% if @thoughts.next_page %>
          <%= link_to url_for(page: @thoughts.next_page, tag: @current_tag, format: :turbo_stream),
              class: "px-6 py-3 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors text-sm font-medium" do %>
            Load more
          <% end %>
        <% end %>
      </div>

      <div data-infinite-scroll-target="loading" class="hidden mt-8 flex justify-center">
        <div class="flex items-center space-x-2 text-gray-500 dark:text-gray-400">
          <svg class="animate-spin h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <span>Loading more thoughts...</span>
        </div>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-900 dark:text-white">No thoughts yet</h3>
        <p class="mt-2 text-gray-500 dark:text-gray-400">Check back later for new thoughts.</p>
      </div>
    <% end %>
  </div>

  <!-- Sidebar -->
  <aside class="hidden lg:block">
    <div class="sticky top-24">
      <% if @popular_tags.any? %>
        <div class="bg-gray-50 dark:bg-gray-800/50 rounded-xl p-6">
          <h2 class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4">
            Popular Tags
          </h2>
          <div class="flex flex-wrap gap-2">
            <% @popular_tags.each do |tag| %>
              <%= link_to "##{tag}", root_path(tag: tag),
                  class: "inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium #{@current_tag == tag ? 'bg-blue-600 text-white' : 'bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-blue-100 dark:hover:bg-blue-900/30 hover:text-blue-700 dark:hover:text-blue-300'} transition-colors shadow-sm" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </aside>
</div>

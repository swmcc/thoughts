<% content_for :title, truncate(@thought.content, length: 60) %>

<% content_for :head do %>
  <!-- Open Graph / Social -->
  <meta property="og:type" content="article">
  <meta property="og:title" content="<%= truncate(@thought.content, length: 60) %>">
  <meta property="og:description" content="<%= @thought.content %>">
  <meta property="og:image" content="https://swm.cc/profile.svg">
  <meta property="og:url" content="<%= request.original_url %>">
  <meta property="og:site_name" content="SWM's Thoughts">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content="<%= truncate(@thought.content, length: 60) %>">
  <meta name="twitter:description" content="<%= @thought.content %>">
  <meta name="twitter:image" content="https://swm.cc/profile.svg">
<% end %>

<div class="max-w-2xl mx-auto">
  <%= link_to root_path, class: "inline-flex items-center gap-2 text-sm text-zinc-500 dark:text-zinc-400 hover:text-zinc-700 dark:hover:text-zinc-200 mb-8 group transition-colors" do %>
    <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
    </svg>
    Back to timeline
  <% end %>

  <article class="relative">
    <!-- Subtle gradient glow behind card -->
    <div class="absolute -inset-4 bg-gradient-to-r from-blue-500/10 via-purple-500/10 to-blue-500/10 rounded-3xl blur-2xl opacity-50"></div>

    <div class="relative bg-white/80 dark:bg-zinc-900/80 backdrop-blur-xl rounded-2xl border border-zinc-200/50 dark:border-zinc-800/50 shadow-xl shadow-zinc-200/50 dark:shadow-none p-6">
      <!-- Header with avatar -->
      <div class="flex gap-3 mb-4">
        <div class="shrink-0">
          <%= image_tag "https://swm.cc/profile.svg",
              class: "w-12 h-12 rounded-full bg-white dark:bg-zinc-900",
              alt: "swmcc" %>
        </div>
        <div class="flex flex-col justify-center">
          <div class="flex items-center gap-1">
            <span class="text-[17px] font-semibold text-zinc-900 dark:text-white">swmcc</span>
            <span class="text-xs text-zinc-400 dark:text-zinc-600">Â·</span>
            <span title="<%= @thought.source_label %>" class="text-zinc-400 dark:text-zinc-500 cursor-help">
              <%= render partial: "shared/source_icon", locals: { source: @thought.source } %>
            </span>
          </div>
          <time datetime="<%= @thought.created_at.iso8601 %>" class="text-xs text-zinc-500 dark:text-zinc-500">
            <%= full_timestamp(@thought.created_at) %>
          </time>
        </div>
      </div>

      <p class="text-xl text-zinc-900 dark:text-white leading-relaxed">
        <%= @thought.content %>
      </p>

      <% if @thought.link_url.present? %>
        <a href="<%= @thought.link_url %>" target="_blank" rel="noopener" class="block mt-4 rounded-xl border border-zinc-200 dark:border-zinc-700 overflow-hidden hover:bg-zinc-50 dark:hover:bg-zinc-800/50 transition-colors">
          <% if @thought.link_image.present? %>
            <div class="aspect-[2/1] bg-zinc-100 dark:bg-zinc-800">
              <%= image_tag @thought.link_image, class: "w-full h-full object-cover", alt: @thought.link_title %>
            </div>
          <% end %>
          <div class="p-4">
            <p class="text-xs text-zinc-500 dark:text-zinc-400 truncate"><%= URI.parse(@thought.link_url).host rescue @thought.link_url %></p>
            <% if @thought.link_title.present? %>
              <p class="font-medium text-zinc-900 dark:text-white"><%= @thought.link_title %></p>
            <% end %>
            <% if @thought.link_description.present? %>
              <p class="text-sm text-zinc-500 dark:text-zinc-400 mt-1"><%= @thought.link_description %></p>
            <% end %>
          </div>
        </a>
      <% end %>

      <% if @thought.tags.any? %>
        <div class="mt-4 text-sm">
          <% @thought.tags.each_with_index do |tag, i| %>
            <%= link_to root_path(tag: tag), class: "text-blue-500 dark:text-blue-400 hover:underline" do %>
              #<%= tag %>
            <% end %><% if i < @thought.tags.length - 1 %> <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </article>

  <!-- Share section -->
  <div class="mt-12 text-center">
    <p class="text-xs font-semibold text-zinc-500 dark:text-zinc-400 uppercase tracking-wider mb-4">Share this thought</p>
    <div class="flex justify-center gap-3">
      <button onclick="navigator.clipboard.writeText(window.location.href).then(() => { this.querySelector('span').textContent = 'Copied!'; setTimeout(() => { this.querySelector('span').textContent = 'Copy link'; }, 2000); })" class="inline-flex items-center gap-2 px-5 py-2.5 bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 rounded-xl hover:bg-zinc-200 dark:hover:bg-zinc-700 transition-all duration-200 text-sm font-medium hover:shadow-lg">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"></path>
        </svg>
        <span>Copy link</span>
      </button>
    </div>
  </div>
</div>

<article class="group">
  <%= link_to thought_path(thought), class: "block p-6 -mx-6 rounded-xl hover:bg-gray-50 dark:hover:bg-gray-800/50 transition-colors duration-200" do %>
    <p class="text-lg text-gray-900 dark:text-white leading-relaxed mb-3">
      <%= thought.content %>
    </p>

    <div class="flex flex-wrap items-center gap-3 text-sm">
      <time datetime="<%= thought.created_at.iso8601 %>" class="text-gray-500 dark:text-gray-400">
        <%= smart_time(thought.created_at) %>
      </time>

      <% if thought.tags.any? %>
        <span class="text-gray-300 dark:text-gray-600">|</span>
        <div class="flex flex-wrap gap-2">
          <% thought.tags.each do |tag| %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 hover:bg-blue-200 dark:hover:bg-blue-900/50 transition-colors">
              #<%= tag %>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</article>
